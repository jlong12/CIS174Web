
@model GameOnProject.Web.Models.ProfileModel

<script src="~/Scripts/DMACC/profile.js" type="text/javascript"></script>

<h2>Update Profile</h2>

<div id="successMessage" class="hidden alert alert-success">
    Successfully Updated!
</div>

<div id="errorMessage" class="hidden alert alert-danger">
    Error Occurred!
</div>

<input id="userId" type="hidden"/>
<div class="col-md-12">
    <div class="col-md-6">
        <label>First Name:</label>
    </div>
    <div class="col-md-6">
        <input id="firstName" type="text" class="form-control"/>
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-6">
        <label>Last Name:</label>
    </div>
    <div class="col-md-6">
        <input id="lastName" type="text" class="form-control" />
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-6">
        <label>Gender:</label>
    </div>
    <div class="col-md-6">
        <input id="gender" type="text" class="form-control" />
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-6">
        <label>Email:</label>
    </div>
    <div class="col-md-6">
        <input id="email" type="email" class="form-control" />
    </div>
</div>

<div class="col-md-12">
    <div class="col-md-6">
        <label>Phone Number: (XXX-XXX-XXXX) format</label>
    </div>
    <div class="col-md-6">
        <input id="phoneNumber" type="text" pattern="^\d{3}-\d{3}-\d{4}$" class="form-control" />
    </div>
</div>

<div class="col-md-12">
    <button class="btn btn-secondary margin-top-md margin-left-md" onclick="updateProfile()">Save</button>
</div>

